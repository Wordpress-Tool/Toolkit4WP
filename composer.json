{
    "name": "szepeviktor/toolkit4wp",
    "description": "OOP toolkit for daily tasks in WordPress development.",
    "keywords": [
        "tools",
        "oop",
        "wordpress"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "szepeviktor/phpcs-psr-12-neutron-hybrid-ruleset": "^0.3.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "phpstan/phpstan-shim": "^0.11.19",
        "szepeviktor/phpstan-wordpress": "^0.3.0"
    },
    "suggest": {
    },
    "config": {
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Toolkit4WP\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "lint": "find src/ -type f -name '*.php' -print0|xargs -0 -L1 -P4 -- php -l",
        "style": "phpcs -p --standard=PSR12NeutronRuleset src/",
        "analyze": "phpstan analyze",
        "test": [
            "@lint",
            "@style",
            "@analyze"
        ]
    }
}
